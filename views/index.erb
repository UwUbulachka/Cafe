
<div class="row">
  
  <% @foods.each do |f| %>

    <div class="col-md-2">
      
       <div class="border border-warning" >
         
          <div>
           <%= f.title %> 
          </div>
      <br/>
      
          <div>
            <img src=" <%= f.path_to_image %>" width="150"  height="100"/>
          </div>
    
          <div>
           <%= f.description %>
          </div>
    
          <div>
           <%= f.size %> гр
         </div>

          <div>
           <%= f.price %> руб
        </div>
       
      </div>
      <br/>
      <br/>
  </div>
  <%end%>
</div>
 